header(class="admin__header" flex="100" layout="row" layout-align="space-between center")
    div(class="header__logo")
        span(class="landing__title_l") L
        span(class="landing__title_u") U
        span(class="landing__title_c") C
        span(class="landing__title_i") I
        span(class="landing__title_d") D
        span(class="landing__title_u") U
        span(class="landing__title_m") M
    div Hello, admin {{ctrl.username}}
    md-menu(class="header__menu")
        md-button(class="header__menu_button" ng-click="ctrl.openMenu($mdOpenMenu, $event)")
            ng-md-icon(icon="menu" style="fill: #3f51b5" size="36px" class="menu__button_icon")
        md-menu-content(class="header__menu_content" width="6" flex="100" layout="column" layout-align="center start")
            md-menu-item(class="header__menu_item" layout-align="start center" ui-sref="admin.profile") Профайл
            md-menu-item(class="header__menu_item" layout-align="start center" ui-sref="admin.schema") Запуск схемы
            md-menu-item(class="header__menu_item" layout-align="start center" ui-sref="admin.auction") Аукционы
            md-menu-item(class="header__menu_item" layout-align="start center" ui-sref="admin.participate") Заявки
            md-menu-item(class="header__menu_item" layout-align="start center" ui-sref="admin.users") Пользователи
            md-menu-item(class="header__menu_item" layout-align="start center" ng-click="ctrl.logout()") Выход
