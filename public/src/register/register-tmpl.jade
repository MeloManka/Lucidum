div(class="wrapper_reg" flex="100" layout="row" layout-align="center center")
    form(flex="50" flex-sm="80" layout="column" layout-align="center center" class="wrap-register")
        h2 Registration
        md-input-container(class="md-block register__container")
            label Username
            input(type='text', name='username',ng-model="ctrl.username", ng-change="ctrl.error = ''")
        md-input-container(class="md-block register__container")
            label Password
            input(type='password', name="password", ng-model="ctrl.password", ng-change="ctrl.error = ''")
        md-input-container(class="md-block register__container")
            label Repeat password
            input(type='password', name="password2", ng-model="ctrl.password2", ng-change="ctrl.error = ''")
        md-button(class="md-raised register__button" ng-class="{'md-primary':!ctrl.isValidFormReg()}" ng-click="ctrl.registration()" ng-disabled="!ctrl.isValidFormReg()") Registration
        a(ui-sref="landing" class="register__text") Go back to the landing page
        div(class="md-warn register__text_error") {{ctrl.error}}
    div(layout="row" ng-show="ctrl.loader" layout-sm="column" layout-align="center center" class="background-loader")
        md-progress-linear(class="loader__linear" md-mode="indeterminate")
